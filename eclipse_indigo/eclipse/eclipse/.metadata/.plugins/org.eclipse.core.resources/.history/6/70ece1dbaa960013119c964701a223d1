package com;

import java.awt.Color;
import java.awt.FlowLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JCheckBox;
import javax.swing.JColorChooser;
import javax.swing.JFrame;
import javax.swing.JMenu;
import javax.swing.JMenuBar;
import javax.swing.JMenuItem;
import javax.swing.JProgressBar;
import javax.swing.KeyStroke;
import javax.swing.event.ChangeEvent;
import javax.swing.event.ChangeListener;

public class Scroll extends Thread implements ChangeListener,ActionListener {

	/**
	 * @param args
	 */
	int i=0;
	JProgressBar jp=new JProgressBar(0,100);
	JFrame jf=new JFrame("Scroll Test");
	//JSlider js=new JSlider(JSlider.VERTICAL,0,10,0);
	JMenuBar jmb=new JMenuBar();
	JMenu jm=new JMenu("File");
	JMenuItem open=new JMenuItem("Color Chooser");
	JCheckBox cb=new JCheckBox("color");
	public Scroll() {
		// TODO Auto-generated constructor stub
		
	jf.setSize(300,300);
	jf.setVisible(true);
	open.setAccelerator(KeyStroke.getKeyStroke("control O"));
	open.addActionListener(this);
	jm.add(open);
	jm.addSeparator();
	jm.add(cb);
	jmb.add(jm);
	jf.setJMenuBar(jmb);
	jf.setLayout(new FlowLayout());
	jf.add(jp);
	
		
		
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
	

Thread t=new Thread(new Scroll());
t.start();
		

	}
	
	
	
		
	
	@Override
	public void stateChanged(ChangeEvent e) {
		// TODO Auto-generated method stub
	
	}
	@Override
	public void actionPerformed(ActionEvent arg0) {
		// TODO Auto-generated method stub
		System.out.println("Menu Pressed");
		Color r= JColorChooser.showDialog(jf, "Please choose color", jf.getContentPane().getBackground());
		jf.getContentPane().setBackground(r);
		
	}
	@Override
	public void run() {
		// TODO Auto-generated method stub
		System.out.println("In");
		for (int i = 0; i < 100; i++) {
			jp.setValue(i);
			try {
				Thread.sleep(100);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		
		
	}

}
