package Service;

import java.util.ArrayList;

import javax.servlet.http.HttpServletRequest;

import bean.PostBean;

import database.DAOQueries;

public class BussinessService {
	DAOQueries db=new DAOQueries();
	public void setPostQuery(String postQuery, String username) {
		// TODO Auto-generated method stub
		
		db.insertQuery(postQuery,username);
		
	}

	public ArrayList<String> viewposts(HttpServletRequest request) {
		// TODO Auto-generated method stub
	String query=request.getParameter("value");
	System.out.println("Query is"+query);
ArrayList<String> comments=db.viewpostQuery(query);
return comments;
	
	}

}
