package Service;

import java.util.Properties;

import javax.mail.Message;
import javax.mail.MessagingException;
import javax.mail.Session;
import javax.mail.Transport;
import javax.mail.internet.InternetAddress;
import javax.mail.internet.MimeMessage;

import bean.LoginBean;
import bean.PatientBean;

public class EMail {

	public void sendMail(LoginBean bean) {
		// TODO Auto-generated method stub
		
	     

	      // Sender's email ID needs to be mentioned
	      String from = "onlyashish143@gmail.com";

	      // Assuming you are sending email from localhost
	      mail.smtp.starttls.enable=true
	    		  mail.smtp.starttls.required=true

	      // Get system properties
	      Properties properties = System.getProperties();

	      // Setup mail server
	      properties.setProperty("mail.smtp.host", "smtp.gmail.com");

	      // Get the default Session object.
	      Session session = Session.getDefaultInstance(properties);

	      try{
	         // Create a default MimeMessage object.
	         MimeMessage message = new MimeMessage(session);

	         // Set From: header field of the header.
	         message.setFrom(new InternetAddress(from));

	         // Set To: header field of the header.
	         message.addRecipient(Message.RecipientType.TO,
	                                  new InternetAddress(bean.getUsername()));

	         // Set Subject: header field
	         message.setSubject("Your account activation on Online Doctor");

	         // Now set the actual message
	         message.setText("<Html> <body>Hi, "+"<br> Thank you for registering with Online Doctor.<br> Your Password is "+bean.getPassword()+"<br> We appreciate your interest in our website. If you have any queries, please write to us at feedback@onlinedoctor.com <br>Regards,Team Online Doctor");

	         // Send message
	         Transport.send(message);
	         System.out.println("Sent message successfully....");
	      }catch (MessagingException mex) {
	         mex.printStackTrace();
	      }
		
		
		
	}
}
